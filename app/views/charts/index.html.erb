<p id="notice"><%= notice %></p>

<div class="row">
  <h1>Charts</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Symptoms</th>
        <th>Treatment</th>
        <th>Date attendance</th>
        <th>Pet</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @charts.each do |chart| %>
        <tr>
          <td><%= chart.symptoms %></td>
          <td><%= chart.treatment %></td>
          <td><%= chart.date_attendance %></td>
          <td><%= chart.pet.name %></td>
          <td><%= link_to 'Show', chart %></td>
          <td><%= link_to 'Edit', edit_chart_path(chart) %></td>
          <td><%= link_to 'Destroy', chart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Chart', new_chart_path, class: "btn btn-info" %>
</div>
