<p id="notice"><%= notice %></p>

<div class="row">
  <h1>Kinds</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Description</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @kinds.each do |kind| %>
        <tr>
          <td><%= kind.description %></td>
          <td>
              <%= link_to 'Show', kind, class: 'btn btn-primary' %>
              <%= link_to 'Edit', edit_kind_path(kind), class: 'btn btn-info' %>
              <%= link_to 'Delete', kind, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Kind', new_kind_path %>
</div>
