<p id="notice"><%= notice %></p>

<div class="row">
  <h1>Owners</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @owners.each do |owner| %>
        <tr>
          <td><%= owner.name %></td>
          <td><%= owner.email %></td>
          <td>
            <%= link_to 'Show', owner, class: 'btn btn-info' %>
            <%= link_to 'Edit', edit_owner_path(owner), class: 'btn btn-primary' %>
            <%= link_to 'Delete', owner, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Owner', new_owner_path, class: "btn btn-info" %>
</div>
