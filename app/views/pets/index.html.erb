<p id="notice"><%= notice %></p>

<div class="row">
  <h1>Pets</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Birth</th>
        <th>Breed</th>
        <th>Kind</th>
        <th>Owner</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @pets.each do |pet| %>
        <tr>
          <td><%= pet.name %></td>
          <td><%= pet.birth %></td>
          <td><%= pet.breed %></td>
          <td><%= pet.kind.description %></td>
          <td><%= pet.owner.name %></td>
          <td><%= link_to 'Show', pet %></td>
          <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
          <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Pet', new_pet_path, class: "btn btn-info" %>
</div>
